<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %} gestion d'aliment {% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset("bootstrap.min.css")}}">
			<link rel="stylesheet" href="{{ asset("font/css/all.min.css")}}">
		{% endblock %}
		<nav class="navbar navbar-expand-sm   bg-success " >
			<ul class="navbar-nav" >
				<li class="nav-item">
					<a class="nav-link" href="#" style="color:#fff">2NM</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{path('voiture')}}" style="color:#fff">Accueil</a>
				</li>
				{% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN')%}
				<li class="nav-item">
					<a class="nav-link" href="{{path('voiture')}}" style="color:#fff">Voitures</a>
				</li>
				{% endif %}
					{% if is_granted('ROLE_ADMIN')%}
				<li class="nav-item">
					<a class="nav-link" href="{{path('administration')}}" style="color:#fff">Administration</a>
				</li>
				{% endif %}
				{% if not app.user %}
				<li class="nav-item ">
					<a class="nav-link " href="{{path('connexion')}}" style="color:#fff">Se connecter</a>
				</li>
					<li class="nav-item">
					<a class="nav-link" href="{{path('user')}}" style="color:#fff">S'inscrire</a>
				</li>
				{% else %}
				<li class="nav-item">
					<a class="nav-link" href="{{path('deconnexion')}}" style="color:#fff">Deconnecter</a>
				</li>
				{% endif %}
			</ul>
		</nav>
		{% block javascripts %}
		<script src="{{ asset("bootstrap.min.js")}}"></script>
		<script src="{{ asset("jquery.min.js")}}"></script>
		<script src="{{ asset("popper.min.js")}}"></script>
		{% endblock %}
	</head>
	<body>
		{% block body %}{% endblock %}
	</body>
</html>
